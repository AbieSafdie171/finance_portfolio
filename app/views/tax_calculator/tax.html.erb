	</div>

	<div class="tax-chart-section">
	    <canvas id="taxChart"></canvas>
	    <script>
	        // Function to update the chart
	        var ctx = document.getElementById('taxChart').getContext('2d');
	        var taxChart = new Chart(ctx, {
	            type: 'pie',  // Specify the chart type
	            data: {
	                labels: ['Net Income', 'Federal Tax', 'State Tax', 'Other'],  // Labels for the pie chart
	                datasets: [{
	                    label: 'Tax Distribution',  // Dataset label
	                    data: [70, 10, 10, 10],  // Placeholder data to be replaced with actual tax values
	                    backgroundColor: [  // Colors for each section
	                        'rgba(54, 162, 235, 0.7)',
	                        'rgba(255, 99, 132, 0.7)',
	                        'rgba(255, 206, 86, 0.7)',
	                        'rgba(255, 0, 86, 0.7)'
	                    ],
	                    borderColor: [  // Border colors for each section
	                        'rgba(54, 162, 235, 1)',
	                        'rgba(255, 99, 132, 1)',
	                        'rgba(255, 206, 86, 1)',
	                        'rgba(255, 0, 86, 0.7)'
	                    ],
	                    borderWidth: 1
	                }]
	            },
	            options: {
	                responsive: true,
	                plugins: {
	                    legend: {
	                        display: true,
	                        position: 'top'  // Display the legend at the top
	                    },
	                    tooltip: {
	                        callbacks: {
	                            label: function(tooltipItem) {
	                                return '$' + tooltipItem.raw.toLocaleString();  // Format the tooltips as currency
	                            }
	                        }
	                    }
	                }
	            }
	        });
	    </script>
	</div>
